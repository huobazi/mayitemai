<ul class="breadcrumb">
  <li>
    <a href="/">首页</a>
  </li>
  <li>
    <a href="<%= goods_path %>">商品管理</a>
  </li>
  <li class="active">
    创建商品
  </li>
</ul>

<%= form_for :brand, method: :get do |f| %>
  <div class="tabbable swp_tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a>搜索</a></li>
    </ul>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <tbody>
      <tr>
        <td width="15%"><%= t('goods.taobao_id') %>:</td>
        <td>
          <div class="col-sm-10">
            <%= f.text_field :wangwang, class: "form-control col-sm-2", name: "taobao_id", value: params[:q] %>
          </div>
        </td>
        <td width="15%"><%= t('brands.wangwang') %>:</td>
        <td>
          <div class="col-sm-10">
            <%= f.text_field :wangwang, class: "form-control col-sm-2", name: "wangwang", value: params[:q] %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="form-actions">
    <button class="btn btn-default" id="searchCustomer" type="submit" name="yt0">搜索</button>
  </div>
<% end %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>
        ID
      </th>
      <th>
        <%= t('goods.title') %>
      </th>
      <th>
        <%= t('brands.wangwang') %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @goods.each do |goods| %>
    <tr class="<%= goods.state == 0 ? "warning" : "" %>">
      <td>
        <%= goods.title %>
      </td>
      <td>
        <%= link_to(t("buttons.update"), edit_good_path(goods) ) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @brands %>

