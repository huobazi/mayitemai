<ul class="breadcrumb">
  <li>
    <a href="/">首页</a>
  </li>
  <li class="active">
    专题管理
  </li>
</ul>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>
        ID
      </th>
      <th>
        <%= t('brands.name') %>
      </th>
      <th>
        <%= t('brands.wangwang') %>
      </th>
      <th>
        <%= t('brands.state') %>
      </th>
      <th>
        <%= t('buttons.action') %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr class="<%= brand.state == 0 ? "warning" : "" %>">
        <td>
          <%= brand.id %>
        </td>
        <td>
          <%= brand.name %>
        </td>
        <td>
          <%= brand.wangwang %>
        </td>
        <td>
          <% if brand.state == Brand::STATE[:normal]%>
            <%= t("brands.normal") %>
          <% else %>
            <%= t("brands.blocked") %>
          <% end %>
        </td>
        <td>
          <%= link_to(t("buttons.update"), edit_brand_path(brand) ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @brands %>

<br>

