<div class="login-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <div class="login-header">
      <a href="javascript:" class="text-center col-sm-12">
        蚂蚁工作平台
      </a>
    </div>
    <div class="form-group">
      <%= f.text_field :username, autofocus: true , class: "form-control", placeholder: "账号" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "密码" %>
    </div>
    <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, "记住密码" %>
    <% end -%>
    <div class="actions">
      <%= f.submit "登录", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <div style="text-align: center;margin-top: 20px;">
    <p>
      建议使用
      <a href="https://www.google.com/intl/zh-cn/chrome/browser/" target="_blank" style="color: #f98235;">谷歌浏览器</a>
      登录本系统，尽量避免使用ie、360和搜狗等浏览器，以达到最好的体验效果。
    </p>
  </div>
</div>
