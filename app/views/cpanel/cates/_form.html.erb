<ul class="breadcrumb">
  <li>
    <a href="/">首页</a>
  </li>
  <li>
    <a href="<%= cpanel_cates_path %>">分类管理</a>
  </li>
  <li class="active">
    创建专题
  </li>
</ul>

<div class="alert alert-warning">
  提示：标注
  <span class="required">*</span>
  为必添项
</div>

<%= form_for([:cpanel, @cate], html: {class: "form-horizontal"}) do |f| %>
<table class="table table-striped table-bordered table-condensed table-hover">
    <% if @cate.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% @cate.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <tr>
      <td width="15%">
        <label class="required">
          <%= t('cates.name') %>
          <span class="required">*</span>
        </label>
      </td>
      <td colspan="3">
        <div class="col-sm-4">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </td>
    </tr>

    <tr>
      <td width="15%">
        <label class="required">
          <%= t('cates.sort') %>
          <span class="required">*</span>
        </label>
      </td>
      <td colspan="3">
        <div class="col-sm-4">
          <%= f.text_field :sort, class: "form-control" %>
        </div>
      </td>
    </tr>

    <tr>
      <td width="15%">
        <label class="required">
          <%= t('cates.state') %>
          <span class="required">*</span>
        </label>
      </td>
      <td colspan="3">
        <div class="col-sm-4">
          <%= f.check_box :state %>
        </div>
      </td>
    </tr>

  </table>
  <div class="form-actions">
    <%= f.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>

