<ul class="breadcrumb">
  <li>
    <a href="<%= cpanel_homes_path %>">首页</a>
  </li>
  <li class="active">
    专题管理
  </li>
</ul>


<%= form_for :brand, method: :get, html: {class: "well"}  do |f| %>
  <table class="table table-striped table-bordered">
    <tbody>
      <tr>
        <td width="15%"><%= t('brands.wangwang') %>:</td>
        <td>
          <div class="col-sm-4">
            <%= f.text_field :wangwang, class: "form-control col-sm-2", name: "q", value: params[:q] %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <button class="btn btn-default" id="searchCustomer" type="submit" name="yt0">搜索</button>
<% end %>


<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>
        ID
      </th>
      <th>
        <%= t('brands.name') %>
      </th>
      <th>
        <%= t('brands.wangwang') %>
      </th>
      <th>
        <%= t('brands.sort') %>
      </th>
      <th>
        <%= t('brands.state') %>
      </th>
      <th>
        <%= t('buttons.action') %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
    <tr class="<%= brand.state == 0 ? "warning" : "" %>">
      <td>
        <%= brand.id %>
      </td>
      <td>
        <%= link_to brand.name, edit_cpanel_brand_path(brand) %>
      </td>
      <td>
        <%= brand.wangwang %>
      </td>
      <td>
        <%= brand.sort %>
      </td>
      <td>
        <% if brand.state == Brand::STATE[:normal]%>
        <%= t("brands.normal") %>
        <% else %>
        <%= t("brands.blocked") %>
        <% end %>
      </td>
      <td>
        <%= link_to(icon('eye'), detail_path(brand), {target: "_blank"} ) %>
        <%= content_tag("span", raw("&nbsp;")) %>
        <%= link_to(icon('edit'), edit_cpanel_brand_path(brand) ) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @brands %>

